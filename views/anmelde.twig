{% extends "layout.twig" %}

        {% block body %}
			  {{ parent() }}
			 
			
			{% if sperrfehler == 1 %}
				<p class="box error">
					Der User, mit dem Sie sich anmelden m&ouml;chten, ist gesperrt,</br>
					bitte wenden Sie sich an Ihren Administrator. </br>
				</p>
			{% endif %}
			
			{% if pasfalsch %}
				<p class="box error">
					Username oder Passwort falsch! </br>
				</p>
			{% endif %}
			
			{% if keinemail %}
				<p class="box error">
					Bitte Daten vollst&auml;ndig ausf&uuml;llen! </br>
				</p>
			{% endif %}
			
			</br>
			
			
			<div>
				Bitte geben Sie Ihre Login-Daten ein:
				</br>
				<form method="post" action="../php/LogIn.php">
				Username: <br />
				<input type="text" name="email" size="20" />
				<br />
				Passwort: <br />
				<input type="password" name="passwort" size="20" /><br />
				<button type="submit" class="ym-button ym-play">Login</button>
				</form>
			</div>
			
		{% endblock %}