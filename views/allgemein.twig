{% extends "layout.twig" %}
		{% block title %}
			{{ parent() }}
			Allgemein
		{% endblock %}
		
        {% block body %}
			  {{ parent() }}
			
			
			<form method="post" action="../php/allgemein.php">
			<table class="tables">
			
			
				<tr>
					<td colspan = 2>
						<h2>&Ouml;ffnungszeiten</h2>
					</td>
				</tr>
			
				<tr>
			    	<td>
			    		Ge&ouml;ffnet von:
			    	</td>
			    	
			    	<td>
			    		<select name="offenvon" >
							
							{% for i in 6..22 %}
							<option {% if zeit.offenVon == i %} selected="selected" {% endif %} value="{{ i }}">
								{{ i }} Uhr
							</option>
							{% endfor %}
					
						</select>
			    	</td>
			  	</tr>
			  	
			  	
			  	
			  	
			  	<tr>
			    	<td>
			    		Ge&ouml;ffnet bis:
			    	</td>
			    	
			    	<td>
			    		<select name="offenbis" >
							
							{% for i in 6..22 %}
							<option {% if zeit.offenBis == i %} selected="selected" {% endif %} value="{{ i }}">
								{{ i }} Uhr
							</option>
							{% endfor %}
					
						</select>
			    	</td>
			  	</tr>
			  	
			  	
			  	
			  	
			  	<tr>
			    	<td>
			    		Saison von:
			    	</td>
			    	
			    	<td>
			    		
							<input class="datepicker2" type="text" name="saisonvon" value="{{ zeit.saisonvon }}" />
					
			    	</td>
			  	</tr>
			  	
			  	
			  	
			  	
			  	<tr>
			    	<td>
			    		Saison bis:
			    	</td>
			    	
			    	<td>
			    		
							<input class="datepicker2" type="text" name="saisonbis" value="{{ zeit.saisonbis }}" />
					
			    	</td>
			  	</tr>
			  	
			  	<tr>
			  		<td>
			  		</td>
			  		<td>
			  			<button type="submit">Speichern</button>
			  		</td>
			  	</tr>
			</table>
			</form>
			
	
		{% endblock %}
