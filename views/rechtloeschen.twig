{% extends "layout.twig" %}
	{% block title %}
		{{ parent() }}
		Reservierung l&ouml;schen
	{% endblock %}
		
	{% block body %}
		{{ parent() }}
		
		{# Aufforderung löschen bestätigen #}
		{% if rechtrecht == 1 %}
		
			<table>
						
					{% if geloescht %}
						
						<div class="important">{{ rechtname }}-Recht wurde aus der Datenbank gel&ouml;scht.</div>
						<form action="../php/rechte.php">
							<button type="submit">zur&uuml;ck</button>
						</form> 
						
					{% else %}
						
						<div class="ui-widget logfehler">
							<div class="ui-state-error ui-corner-all" style="padding: 0 .7em; text-align: center">
								<p>
									<span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;">
									</span>
						
									<strong>Achtung: </strong>
										
									Wenn Sie mit l&ouml;schen best&auml;tigen, wird das Recht ({{ rechtname }}) unwiederruflich gel&ouml;scht!
										
								</p>
							</div>
						</div>
						
						</br>	
						<h3>Sind Sie sicher?</h3>
						
						</br>
						
				<form method="post" action="../php/rechtloeschen.php">		
						<input type="hidden" name="{{ rid }}">
				   		<input type="hidden" name="bestaetigt">
						<button type="submit">Recht l&ouml;schen</button>
							
					{% endif %}
					
				</form>
			
		{% endif %}
		
	{% endblock %}
