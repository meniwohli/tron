{% extends "layout.twig" %}

        {% block body %}
			  {{ parent() }}
			
			<table>
				<th>
					
					
					{% for p in platz %}
						<td class="tdown">{{ p.PlatzNr }}</td>
					{% endfor %}			
					
				</th>
				
				{% for z in zeit.OffenVon..zeit.OffenBis %}
					<tr>
						<td>{{ z }} Uhr</td>
						{% for p in platz %}
							<td>
								{% for res in reservierungen %}
									{% if res.fk_Platz_ID == p.Platz_ID %}
										{% if res.ReservierungVon == z %}
											reserviert 
										{% endif %}
									{% endif %}
								{% endfor %}							
							</td>
						
						{% endfor %}
					</tr>
				{% endfor %}
			
			
			
			
			
			
			
			
			
			
			
			
			</table>
			
			
			
			
			
	
		{% endblock %}
