{% extends "layout.twig" %}

        {% block body %}
			  {{ parent() }}
			
			<table>
				<th>
					
					
					{% for p in platz %}
						<td class="tdown">{{ p.PlatzNr }}</td>
					{% endfor %}			
					
				</th>
				
				{% for z in zeit.OffenVon..zeit.OffenBis %}
					<tr>
						<td>{{ z }} Uhr</td>
						{% for p in platz %}
							<td>
								{% for res in reservierungen %}
									{% if res.fk_Platz_ID == p.Platz_ID and res.ReservierungVon == z %}
										{% if benutzerrecht %}
											 {% for m in mitglieder %}
												{% if res.fk_Mitglied_ID == m.Mitglied_ID %}
												 	{{ m.Vorname }} {{ m.Nachname }}
												{% endif %}
											 {% endfor %}
										{% else %}	
											reserviert
										{% endif %}
										{% set voll = 1 %}
									{% else %}
										{% set voll = 0 %}
									{% endif %}
								{% endfor %}
								{% if voll == 0 %}
									frei
								{% endif %}
							</td>
						
						{% endfor %}
					</tr>
				{% endfor %}
			
			
			
			
			
			
			
			
			
			
			
			
			</table>
			
			
			
			
			
	
		{% endblock %}
