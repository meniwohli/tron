{% extends "layout.twig" %}

        {% block body %}
			  {{ parent() }}
			
			</br>
			
			<div>
			{% if plaetze != null %}
				<table>
					<th>
						<td>Platz-Nr</td>
						<td>Offen/Gesperrt</td>
						<td>Kommentar</td>
						<td></td>
						<td></td>
					</th>
				{% for pla in plaetze %}
            		<tr>
            			<td>{{ '' }}</td>
            			<td>{{ pla.platzNr }}</td>
            			{% if pla.gesperrt == 0 %}
            				<td>Ge&ouml;ffnet</td>
            				<td></td>
            				<td>
							 	<form id= "sperren" method="post" action="../php/platzsperren.php">
									<input type="hidden" name="{{ pla.platz_ID }}">
									<button type="submit" class="ym-button ym-spark">Sperren</button>
								</form>
							</td>
            			{% elseif pla.gesperrt == 1 %}
            				<td>Gesperrt</td>
            				<td>{{ pla.kommentar }}</td>
            				<td>
							 	<form id= "oeffnen" method="post" action="../php/platzfreigeben.php">
									<input type="hidden" name="{{ pla.platz_ID }}">
									<button type="submit" class="ym-button ym-spark">Freigeben</button>
								</form>
							</td>
            			{% endif %}
            			
            			
            			
            			
            			 
						<td>
							 <form id= "loeschen" method="post" action="../php/platzloeschen.php">
								<input type="hidden" name="{{ pla.platz_ID }}">
								<button type="submit" class="ym-button ym-delete">L&ouml;schen</button>
							</form>
						</td> 
            			
            		</tr>
        		{% endfor %}
        		</table>
        		
        		
        		<form id= "allessperren" method="post" action="../php/platzsperren.php">
        			<input type="hidden" name="allessperren">
        			<button type="submit" class="ym-button ym-spark">Alle Pl&auml;tze sperren</button>
				</form>
				
				<form id= "allesfreigeben" method="post" action="../php/platzfreigeben.php">
        			<input type="hidden" name="allesfreigeben">
					<button type="submit" class="ym-button ym-spark">Alle Pl&auml;tze freigeben</button>
				</form>
        		
        		
        		
        		
        		</br>
        		<b>Neuen Platz anlegen</b>
        		</br>
        		</br>
        		
        		<form method="post" action="../php/plaetze.php">
        			Platz-Nummer:
					<input type="text" name="platznum" />
					</br>
					</br>
	   		    	<input type="hidden" name="neubestaetigt">
	   		    	<button type="submit" class="ym-button ym-add">Platz anlegen</button>
				</form>
        	{% else %}
        		{{ 'Keine Pl&auml;tze vorhanden' }}
        	{% endif %}
			</div>
			
	
		{% endblock %}
