{% extends "layout.twig" %}

        {% block body %}
			  {{ parent() }}
			
			</br>
			
			<div>
			{% if plaetze != null %}
				<table>
					<th>
						<td>Platz-Nr</td>
						<td>Offen/Gesperrt</td>
						<td>Kommentar</td>
						<td></td>
						<td></td>
					</th>
				{% for pla in plaetze %}
            		<tr>
            			<td>{{ '' }}</td>
            			<td>{{ pla.platzNr }}</td>
            			{% if pla.gesperrt == 0 %}
            				<td>Ge&ouml;ffnet</td>
            				<td></td>
            				<td>
							 	<form id= "sperren" method="post" action="../php/platzsperren.php">
									<input type="hidden" name="{{ pla.platz_ID }}">
									<input type="submit" value="Sperren">
								</form>
							</td>
            			{% elseif pla.gesperrt == 1 %}
            				<td>Geschlossen</td>
            				<td>{{ pla.kommentar }}</td>
            				<td>
							 	<form id= "oeffnen" method="post" action="../php/platzfreigeben.php">
									<input type="hidden" name="{{ pla.platz_ID }}">
									<input type="submit" value="Freigeben">
								</form>
							</td>
            			{% endif %}
            			
            			
            			
            			
            			 
						<td>
							 <form id= "loeschen" method="post" action="../php/platzloeschen.php">
								<input type="hidden" name="{{ pla.platz_ID }}">
								<input type="submit" value="L&ouml;schen">
							</form>
						</td> 
            			
            		</tr>
        		{% endfor %}
        		</table>
        	{% else %}
        		{{ 'Keine Pl&auml;tze vorhanden' }}
        	{% endif %}
			</div>
			
	
		{% endblock %}
